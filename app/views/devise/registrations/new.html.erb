
<div class="card" style="width: 30rem;margin:0 auto;">
  <div class="card-body">
    <h5 class="card-title">Registrarse</h5>
    <p class="card-text"><%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class:"form-control",
        placeholder: "Email"%>
      </div>
      <br />
      <div class="field form-group">
    <%= f.text_field :name, required:true, autofocus: true, autocomplete: "nombre",
    class:"form-control",
    placeholder: "Nombre" %>
  </div><br />
    
  <div>
    <%= f.label :nacimiento %><br />
    <%= f.date_select :nacimiento, required:true, start_year: Date.today.year - 90, end_year: Date.today.year - 1, autofocus: true%>
  </div><br />

  <div class="field form-group">
  <%= f.label :phone %><br />
  <%= f.text_field :phone, required:true, autofocus: true, autocomplete: "phone",
  class:"form-control",
    placeholder: "Phone"%>
  </div>
<br />


  <div class="field form-group">
  <%= f.label :password %>
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password",
  class:"form-control",
    placeholder: "ContraseÃ±a"%>
</div>

<div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",
    class:"form-control",
      placeholder: "Repita la contraseÃ±a"%>
  </div>
  
       <br/>
      <div class="actions" >
        <%= f.submit "Sign up",
        class:"btn btn-success" %>
      </div>
    <% end %>
    <br/>
    <%= render "devise/shared/links" %>    
    </p>
  </div>
</div>
