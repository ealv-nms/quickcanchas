
<div class="card" style="width: 30rem;margin:0 auto;">
  <div class="card-body">
    <h5 class="card-title">Editar perfil</h5>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  </br>
  <div class="field form-group">
        <%= f.email_field :email, autofocus: true, autocomplete: "email",
        class:"form-control",
        placeholder: "Email"%>
      </div>
      <br />
      <div class="field form-group">
    <%= f.text_field :name, required:true, autofocus: true, autocomplete: "nombre",
    class:"form-control",
    placeholder: "Nombre" %>
  </div><br />
    
  <div>
    <%= f.label :nacimiento %><br />
    <%= f.date_select :nacimiento, required:true, start_year: Date.today.year - 90, end_year: Date.today.year - 1, autofocus: true%>
  </div><br />

  <div class="field form-group">
  <%= f.label :phone %><br />
  <%= f.text_field :phone, required:true, autofocus: true, autocomplete: "phone",
  class:"form-control",
    placeholder: "Phone"%>
  </div>
<br />




  
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="field form-group">
  <%= f.label :password %><i> (Deje en blanco si no desea cambiarla)</i><br />
  <% if @minimum_password_length %>
  <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %><br />
  <%= f.password_field :password, autocomplete: "new-password",
  class:"form-control",
    placeholder: "Contrase単a"%>
</div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,
    class:"form-control",
    placeholder: "Contrase単a"%>
  </div>
      </br>
  <div class="field form-group">
    <%= f.label :current_password %> <i>(Necesitamos su contrase単a actual para hacer los cambios)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" ,
    class:"form-control",
    placeholder: "Contrase単a"%>
  </div>
  </br>

  <div class="actions">
    <%= f.submit "Guardar cambios" %>
  </div>
<% end %>



</div>
</div>