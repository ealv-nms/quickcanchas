<p id="notice"><%= notice %></p>

<center> <h1>Mis reclamos</h1> </center>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Titulo</th>
      <th>Contenido</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reclamos.each do |reclamo| %>
      <tr>
        <td><%= reclamo.user_id %></td>
        <td><%= reclamo.titulo %></td>
        <td><%= reclamo.contenido %></td>
        <td><%= link_to 'Show', reclamo %></td>
        <td><%= link_to 'Edit', edit_reclamo_path(reclamo) %></td>
        <td><%= link_to 'Destroy', reclamo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo reclamo', new_reclamo_path %>
